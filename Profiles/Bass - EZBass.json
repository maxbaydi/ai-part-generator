{
  "id": "bass_ezbass",
  "name": "Bass - EZBass",
  "family": "bass",
  "vendor": "Toontrack",
  "description": "Toontrack EZBass. Realistic electric bass guitar with keyswitches for articulations including slap, harmonics, ghost notes, slides, and mutes. Perfect for rock, pop, funk, and modern styles.",
  "midi": {
    "channel": 1,
    "polyphony": "mono",
    "is_drum": false
  },
  "range": {
    "absolute": ["A#1", "E4"],
    "preferred": ["E2", "B3"]
  },
  "fix_policy": "octave_shift_to_fit",
  "articulations": {
    "mode": "keyswitch",
    "octave_offset": 1,
    "default": "sustain",
    "short_articulations": ["staccato", "ghost_note", "loud_mute", "slap"],
    "map": {
      "sustain": { "pitch": "A-1", "description": "Normal fingered notes with polyphony enabled (hold)", "dynamics": "velocity", "hold": true },
      "harmonic": { "pitch": "A#-1", "description": "Natural harmonics", "dynamics": "velocity", "hold": true },
      "slap": { "pitch": "B-1", "description": "Slap/Pop technique", "dynamics": "velocity", "hold": true },
      "finger_down": { "pitch": "C#0", "description": "Middle finger / Down stroke articulation", "dynamics": "velocity" },
      "loud_mute": { "pitch": "D#0", "description": "Percussive muted note (press to trigger)", "dynamics": "velocity" },
      "ghost_note": { "pitch": "E0", "description": "Ghost note - soft percussive note", "dynamics": "velocity" },
      "slide_down": { "pitch": "F0", "description": "Slide current note down (press)", "dynamics": "velocity" },
      "slide": { "pitch": "G0", "description": "Slide to next note (hold during transition)", "dynamics": "velocity", "hold": true },
      "slide_up": { "pitch": "G#0", "description": "Slide current note up (press)", "dynamics": "velocity" },
      "staccato": { "pitch": "A-1", "description": "Short notes using polyphony mode", "dynamics": "velocity" }
    }
  },
  "controllers": {
    "vibrato": 1,
    "sustain_pedal": 64,
    "damping": 67
  },
  "ai": {
    "system_prompt_template": "Sustain pedal (CC64): interp hold, values 0 or 127 only. Damping (CC67): 0=open, 127=fully muted.",
    "user_prompt_template": ""
  }
}
