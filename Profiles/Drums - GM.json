{
  "id": "drums_gm",
  "name": "Drums - GM",
  "family": "drums",
  "vendor": "General MIDI",
  "description": "General MIDI Standard Drum Kit. Universal drum mapping compatible with most GM synthesizers and samplers.",
  "midi": {
    "channel": 10,
    "polyphony": "poly",
    "is_drum": true
  },
  "range": {
    "absolute": [35, 81],
    "preferred": [36, 55]
  },
  "fix_policy": "clamp",
  "articulations": {
    "mode": "keyswitch",
    "default": "kick",
    "map": {
      "kick": { "pitch": 36, "description": "kick drum" },
      "snare": { "pitch": 38, "description": "snare" },
      "rim": { "pitch": 37, "description": "rim shot" },
      "clap": { "pitch": 39, "description": "hand clap" },
      "hihat_closed": { "pitch": 42, "description": "hihat closed" },
      "hihat_open": { "pitch": 46, "description": "hihat open" },
      "hihat_pedal": { "pitch": 44, "description": "hihat pedal" },
      "tom_low": { "pitch": 41, "description": "tom low" },
      "tom_mid": { "pitch": 45, "description": "tom mid" },
      "tom_high": { "pitch": 48, "description": "tom high" },
      "ride": { "pitch": 51, "description": "ride cymbal" },
      "crash": { "pitch": 49, "description": "crash cymbal" },
      "splash": { "pitch": 55, "description": "splash cymbal" }
    }
  },
  "controllers": {
    "dynamics": 1
  },
  "ai": {
    "system_prompt_template": "",
    "user_prompt_template": ""
  }
}
