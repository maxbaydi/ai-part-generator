{
  "id": "cello_css",
  "name": "Cello - CSS",
  "family": "strings",
  "vendor": "Cinematic Studio Series",
  "description": "Cinematic Studio Strings Cello. Deep, rich tone with exceptional expressiveness. Ideal for both melodic solos and bass foundation.",
  "midi": {
    "channel": 1,
    "polyphony": "poly",
    "is_drum": false
  },
  "range": {
    "absolute": ["C2", "C6"],
    "preferred": ["C2", "G5"]
  },
  "fix_policy": "octave_shift_to_fit",
  "legato": {
    "mode": "keyswitch",
    "keyswitch": "Ab1",
    "velocity_on": 100,
    "velocity_off": 1,
    "description": "Enable legato with high velocity (≥64), disable with low velocity (<64). Prefer keyswitch over CC for legato control."
  },
  "articulations": {
    "mode": "cc",
    "cc_number": 58,
    "default": "sustain",
    "short_articulations": ["spiccato", "staccatissimo", "staccato", "sforzando", "pizzicato", "col_legno", "marcato"],
    "map": {
      "sustain": { "cc_value": 0, "description": "Sustain (Low Latency Legato)", "dynamics": "cc1" },
      "sustain_expressive": { "cc_value": 6, "description": "Sustain (Expressive Legato)", "dynamics": "cc1" },
      "spiccato": { "cc_value": 11, "description": "Spiccato", "dynamics": "velocity" },
      "staccatissimo": { "cc_value": 16, "description": "Staccatissimo", "dynamics": "velocity" },
      "staccato": { "cc_value": 21, "description": "Staccato", "dynamics": "velocity" },
      "sforzando": { "cc_value": 26, "description": "Sforzando", "dynamics": "velocity" },
      "pizzicato": { "cc_value": 31, "description": "Pizzicato", "dynamics": "velocity" },
      "bartok_snap": { "cc_value": 36, "description": "Bartok Snap", "dynamics": "velocity" },
      "col_legno": { "cc_value": 41, "description": "Col Legno", "dynamics": "velocity" },
      "trills": { "cc_value": 46, "description": "Trills", "dynamics": "cc1" },
      "harmonics": { "cc_value": 51, "description": "Harmonics", "dynamics": "cc1" },
      "tremolo": { "cc_value": 56, "description": "Tremolo", "dynamics": "cc1" },
      "measured_tremolo": { "cc_value": 61, "description": "Measured Tremolo", "dynamics": "cc1" },
      "marcato": { "cc_value": 66, "description": "Marcato", "dynamics": "velocity" },
      "con_sordino": { "cc_value": 86, "description": "Con Sordino", "dynamics": "cc1" }
    }
  },
  "controllers": {
    "semantic_to_cc": {
      "dynamics": 1,
      "expression": 11,
      "vibrato": 21
    },
    "smoothing": {
      "min_step": "1/32",
      "interp": "cubic",
      "mode": "fixed",
      "write_every_step": true
    }
  },
  "ai": {
    "system_prompt_template": "Generate expressive cello parts for Cinematic Studio Strings. Use CC1 for dynamics on long articulations, velocity for short articulations. LEGATO: Use keyswitch Ab1 to toggle legato mode - velocity ≥64 enables, <64 disables. Switch articulations via CC58, use keyswitch for legato control. The cello has a deep, rich, emotionally resonant tone. Playable range is C2-C6, preferred range C2-G5."
  }
}
