  "controllers": {
    "semantic_to_cc": {
      "dynamics": 1,
      "expression": 11,
      "vibrato": 21
    },
    "smoothing": {
      "min_step": "1/32",
      "interp": "cubic",
      "mode": "fixed",
      "write_every_step": true
    }
  },
  "ai": {
    "system_prompt_template": "Generate expressive violin parts for Cinematic Studio Strings. Use CC1 for dynamics on long articulations, velocity for short articulations. The violin has a bright, penetrating tone with rich overtones. Playable range is G3-E7, preferred range G3-B6."
  }
